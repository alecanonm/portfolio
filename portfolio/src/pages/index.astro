---
import MysiteLayout from '../layouts/MySiteLayout.astro'
---

<MysiteLayout title="AlejandroDev | Full-Satck">
	<section class="flex justify-center">
		<div class="flex flex-col items-center ">
			<div class="w-2 h-4 rounded-full bg-black"></div>
			<div class="w-1 h-5/6 bg-gradient-to-b from-black"></div>
		</div>
		<article class="flex flex-wrap-reverse ">
			<picture class="bottom-2 md:bottom-0 md:top-[17rem] lg:top-32 max-w-[20rem] md:max-w-[23rem] lg:max-w-[28rem] right-0">
				<img class=" max-w-full" src="/alejandroDev.png" alt="AlejandroDev" />
				<div class="flex items-center">
					<div class="w-full h-1 bg-gradient-to-l from-black">
					</div>
					<div class="w-4 h-2 rounded-full bg-black"></div>
				</div>
			</picture>
		<section class=" flex flex-col pl-4">
		<h1 class="text-[3.2rem] md:text-7xl font-extrabold leading-[3.5rem]">Hi there! </h1>
		<h1 class="text-[3.2rem] md:text-7xl font-extrabold leading-[3.5rem]">I'm <spna class="text-yellow-600">Alejandro</spna> <span class=" max-md:hidden  text-yellow-600"> Canon</span></h1>
	</section>
	</article>
</section>

</MysiteLayout>